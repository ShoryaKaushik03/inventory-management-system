FROM python:3.9-slim

WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the application code
COPY . .

# Expose port
EXPOSE 8000

# Run both the API server and consumer in separate processes
# For a production environment, you would typically run these as separate containers
CMD ["sh", "-c", "python consumer.py & uvicorn main:app --host 0.0.0.0 --port 8000"]